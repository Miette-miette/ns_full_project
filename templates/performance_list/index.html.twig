{% extends 'base.html.twig' %}

{% block title %}Liste Performances{% endblock %}

{% block body %}
<main>
    <h1>Liste des Performances</h1>

    <table class="table table-hover">
        {% for performances in performance %}
            <thead>
                <th>Performance {{performances.id}}</th>
            </thead>
            <tbody class="d-flex flex-row">
                <tr class="table-primary d-flex flex-column">
                    <td>
                        <h2>{{performances.titre}}</h2>
                    </td>
                    <td>
                        <h3>Location:</h3>
                        <p>{{performances.Location}}</p></td>
                    <td>
                        <h3>Date de d√©but:</h3>
                        <p>{{performances.beginDatetime|format_datetime()}}</p>
                    </td>
                    <td>
                        <h3>Date de fin:</h3>
                        <p>{{performances.endDatetime|format_datetime()}}</p>
                    </td>
                    <td>
                        <h3>Description:</h3>
                        <p>{{performances.content}}</p>
                    </td>
                    
                </tr>
                <tr class="table-primary d-flex flex-column">
                    <td><img src="{{vich_uploader_asset(performances, 'imageFile')}}" width="200px"></td>
                    <td><input type="button" value="Modifier la fiche"></td>
                </tr>
            </tbody>
        {% endfor %}
    </table>
    <div class="navigation">
        {{ knp_pagination_render(performance) }}
    </div>
    <div class="count">
        <p> Nombre de fiches: {{performance.getTotalItemCount}}</p>
    </div>
</main>
{% endblock %}
